<section class="pt-30 lg:pt-[120px]">
  <div class="max-w-6xl min-h-screen mx-auto pt-10 px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row -mx-4 items-center">
      <div class="md:flex-1 px-20">
        <h2 class="text-2xl font-bold text-teal-400 mb-2">Member Name:
          {{profile.memberName}}</h2>
        <br />
        <div class="mr-4">
          <span class="font-bold text-teal-400">email:</span>
          <span class="text-teal-200">{{profile.email}}</span>
        </div>
        <br />
        <div class="mr-4">
          <span class="font-bold text-teal-400">Phone:</span>
          <span class="text-teal-200">{{profile.phone}}</span>
        </div>
        <br />
        <div>
          <span class="font-bold text-teal-400">Year Of Birth:</span>
          <span class="text-teal-200">{{profile.YOB}}</span>
        </div>
        <br />
      </div>
      <div class="md:flex-1 px-4">
        <div class="h-[360px] rounded-lg bg-gray-300 mb-4">
          <img
            class="w-full h-full object-cover"
            src={{image}}
            alt="Image"
            onError="this.onerror=null;this.src='/assets/404.png';"
          />
        </div>
      </div>
    </div>
    <a
      href="/member/update"
      class="w-full text-black bg-teal-400 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
    >Update Profile</a>
  </div>
</section>